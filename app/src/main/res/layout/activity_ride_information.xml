<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.RideInformation"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraintlayout_actionbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageButton
            android:id="@+id/img_btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/ride_information_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"
            android:text="Ride Information"
            android:textSize="30sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintlayout_actionbar"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        android:layout_margin="10dp"        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayout_cardview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_baseline_person_24"
                />

            <TextView
                android:id="@+id/owner_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@id/profile_image"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="15dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/contact_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="contact"
                android:background="@drawable/background_ripple_edit_text_border"
                app:layout_constraintStart_toEndOf="@id/age_text_view"
                app:layout_constraintTop_toBottomOf="@id/gender_text_view"                android:layout_margin="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/age_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 y/s"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/owner_name_text_view"
                app:layout_constraintStart_toEndOf="@id/profile_image"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/city_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toEndOf="@id/profile_image"
                app:layout_constraintTop_toBottomOf="@id/age_text_view"
                />

            <TextView
                android:id="@+id/gender_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="gender"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@id/owner_name_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardview_main"
        app:layout_constraintStart_toStartOf="parent"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <TextView
                android:id="@id/source_location_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source Location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@id/destination_location_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination Location"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/source_location_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/available_seats_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Seats:"
                app:layout_constraintTop_toBottomOf="@+id/source_location_text_view"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/cost_seats_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost per Seats:"
                app:layout_constraintTop_toBottomOf="@+id/available_seats_text_view"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/seat_no_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/cost_seats_text_view"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_vehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview_2"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        android:layout_margin="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayout_vehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginTop="12dp"
                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_baseline_person_outline_24"
                />

            <TextView
                android:id="@+id/car_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maruti suzuki Vitara Brezza"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@id/profile_image2"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="15dp"
                />

            <TextView
                android:id="@+id/model_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model: 2018"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toEndOf="@id/profile_image2"
                app:layout_constraintTop_toBottomOf="@id/car_name_text_view"
                />

            <TextView
                android:id="@+id/fuel_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fuel"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toEndOf="@id/profile_image2"
                app:layout_constraintTop_toBottomOf="@id/model_text_view"
                />

            <TextView
                android:id="@+id/ac_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AC"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toEndOf="@id/profile_image2"
                app:layout_constraintTop_toBottomOf="@id/fuel_text_view"
                />

            <TextView
                android:id="@+id/vechile_no_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vechile no. : GJ-12-BB-5678"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toEndOf="@id/profile_image2"
                app:layout_constraintTop_toBottomOf="@id/ac_text_view"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>






</androidx.constraintlayout.widget.ConstraintLayout>